package com.user.user_micro_service_app;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.persistence.autoconfigure.EntityScan;
import org.springframework.cloud.client.discovery.EnableDiscoveryClient;

@SpringBootApplication(scanBasePackages = "user")
@EnableDiscoveryClient
@EntityScan(basePackages = "user.com.entity")
public class UserMicroServiceAppApplication {

	public static void main(String[] args) {
		SpringApplication.run(UserMicroServiceAppApplication.class, args);
		System.err.println("backend microservice up!  8182");
	}

}
