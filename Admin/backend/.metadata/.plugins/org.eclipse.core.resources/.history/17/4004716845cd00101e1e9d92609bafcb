server.port=8182
spring.application.name=user-micro-service-app

# ADMIN microservice URL
admin.base-url=http://localhost:8181

# Eureka discovery
eureka.client.service-url.defaultZone=http://localhost:8761/eureka

# Allow LocalDate / LocalDateTime
spring.jackson.serialization.WRITE_DATES_AS_TIMESTAMPS=false

# Disable security while building (optional)
spring.main.allow-bean-definition-overriding=true
