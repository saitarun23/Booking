package backend.com.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import backend.com.entity.Spot;
import backend.com.service.SpotService;

@RestController
@RequestMapping("spot") // http://localhost:8181/spot/*
public class SpotController {

	@Autowired
	SpotService spotService;

	@PostMapping(value = "add_spot")
	public String addSpot(@RequestBody Spot spot) {
		return spotService.addSpot(spot);
	}

	@GetMapping(value = "findAll_spot")
	public List<Spot> findAllSpots() {
		return spotService.findAllSpots();
	}

	@GetMapping(value = "find_spot_byid/{spotId}")
	public Spot findSpotById(@PathVariable("spotId") int spotId) {
		return spotService.findSpotById(spotId);
	}

	@PutMapping(value = "update_spot")
	public String updateSpot(@RequestBody Spot spot) {
		return spotService.updateSpot(spot);
	}

	@DeleteMapping(value = "delete_spot/{spotId}")
	public String deleteSpot(@PathVariable("spotId") int spotId) {
		return spotService.deleteSpot(spotId);
	}
}
