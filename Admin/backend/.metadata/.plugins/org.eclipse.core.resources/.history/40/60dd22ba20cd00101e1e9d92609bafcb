package backend.com.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import backend.com.entity.SubService;
import backend.com.service.SubServiceService;

@RestController
@RequestMapping("subservice")				// http://localhost:8181/subservice/*
public class SubServiceController {

	@Autowired
	SubServiceService subserviceService;

	@PostMapping(value = "add_subservice")
	public String addSubService(@RequestBody SubService subService) {
		return subserviceService.addSubService(subService);
	}

	@GetMapping(value = "findAll_subservice")
	public List<SubService> getAllSubServices() {
		return subserviceService.findAllSubServices();
	}

	@GetMapping(value = "find_subservice_byid/{serviceid}")
	public SubService getById(@PathVariable("serviceid") int serviceid) {
		return subserviceService.findSubServiceById(serviceid);
	}

	@PutMapping(value = "update_subservice")
	public String updateSubService(@RequestBody SubService subService) {
		return subserviceService.updateSubService(subService);
	}

	@DeleteMapping(value = "delete_subservice/{serviceid}")
	    public String deleteSubService(@PathVariable("serviceid") int serviceid) {
	        return subserviceService.deleteSubService(serviceid);
	}
}